{
	"version": 2,
	"public": true,
	"builds": [
		{
			"src": "package.json",
			"use": "@vercel/static-build",
			"config": { "distDir": "dist" }
		}
	],
	"routes": [
		{ "handle": "filesystem" },
		{ "src": "/.*", "dest": "/index.html" }
	],
	"headers": [
		{
			"source": "/.*",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "s-maxage=1, stale-while-revalidate"
				}
			]
		}
	],
	"cleanUrls": true,
	"trailingSlash": false
}
